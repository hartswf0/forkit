{
    "corpus_id": "fork_cascade_schema_v1",
    "corpus_title": "THE FORK: Cascading Branch Labeling Schema",
    "schema": {
        "description": "Recursive tree structure for N-deep branching paradox forks. Each branch spawns sub-branches, each labeled hierarchically.",
        "labeling_convention": {
            "root": "T0 — Initial state before fork",
            "level_1": "T1, T2, T3... — First-order branches from root",
            "level_2": "T1.1, T1.2, T2.1... — Second-order branches from each L1",
            "level_3": "T1.1.1, T1.1.2, T1.2.1... — Third-order branches",
            "level_N": "T{parent}.{child} — Recursive pattern",
            "terminal": "T{path}:END — No further branching possible",
            "loop": "T{path}:LOOP→T{ancestor} — Returns to earlier state"
        },
        "metadata_per_branch": {
            "branch_id": "Hierarchical path (e.g. T1.2.1)",
            "depth": "Integer layer count from root",
            "parent": "Immediate ancestor branch",
            "probability": "Estimated likelihood (0.0-1.0) given parent",
            "reversibility": "Can this branch be undone?",
            "entity_state": "What entities exist/look like at this branch",
            "decider_state": "Who controls the next fork (if any)",
            "time_elapsed": "Narrative time since root",
            "cascade_count": "Total branches in this subtree"
        },
        "tracking_methods": {
            "breadcrumb_path": "Full path from root: T0→T1→T1.2→T1.2.1",
            "depth_counter": "Current layer: depth=3",
            "subtree_sum": "Total descendants: 12 branches below",
            "terminal_count": "Leaf nodes reached: 5 endings",
            "loop_count": "Cycles detected: 2 loops"
        },
        "generation_limits": {
            "practical_depth": "3-5 layers before combinatorial explosion",
            "theoretical_depth": "Unbounded, but coherence degrades",
            "suggested_pruning": "Stop branches at low-probability (<0.1) or terminal states"
        }
    },
